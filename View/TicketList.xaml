<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:ZIMAeTicket.Converters"
             xmlns:model="clr-namespace:ZIMAeTicket.Model"
             xmlns:viewmodel="clr-namespace:ZIMAeTicket.ViewModel"
             x:DataType="viewmodel:TicketsViewModel"
             x:Class="ZIMAeTicket.View.TicketList"
             Title="{Binding Title}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:BuyerMaskConverter x:Key="BuyerMaskConverter"/>
            <converters:UsedBoolConverter x:Key="UsedBoolConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid ColumnDefinitions="*,Auto"
          ColumnSpacing="10"
          RowDefinitions="Auto,Auto,*,Auto"
          RowSpacing="10">

        <HorizontalStackLayout Grid.ColumnSpan="2" Grid.Row="0" Padding="10">
            <HorizontalStackLayout.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding DisplayGroupChoicePopUpCommand}"/>
            </HorizontalStackLayout.GestureRecognizers>
            <Label Text="{Binding ChosenGroupName}" FontSize="24"/>
        </HorizontalStackLayout>


        <Entry Text="{Binding SearchPhrase, Mode=TwoWay}" Placeholder="np. jan kowalski" Grid.Row="1" Grid.Column="0" />

        <Button Text="Szukaj" Grid.Row="1" Grid.Column="1"
                Command="{Binding GetTicketsByPhraseCommand}"
                IsEnabled="{Binding IsGroupChosen}"/>

        <CollectionView Grid.Row="2" Grid.ColumnSpan="2" BackgroundColor="{StaticResource Secondary}"
                        ItemsSource="{Binding Tickets}"
                        SelectionMode="None">

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:Ticket">
                    <Border Margin="0, 0, 10, 0" Padding="10" Stroke="{StaticResource Gray100}" Shadow="2 2 4 gray" BackgroundColor="{StaticResource White}">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer CommandParameter="{Binding .}"
                                                  Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodel:TicketsViewModel}}, Path=GoToDetailsCommand}"/>
                        </Border.GestureRecognizers>
                        <Grid ColumnDefinitions="100,*" RowDefinitions="Auto,*" ColumnSpacing="10" >
                            <Label Text="{Binding OrderId}" Grid.Column="0" Grid.Row="0" FontSize="24"/>
                            <Label Text="{Binding Buyer, Converter={StaticResource BuyerMaskConverter}}" Grid.Column="1" Grid.Row="0" FontSize="24"/>
                            <Label FontSize="16" TextColor="{StaticResource Gray500}" Grid.Column="0" Grid.Row="1">
                                <Label.Text>
                                    <Binding Path="Id" StringFormat="Bilet nr: {0}"/>
                                </Label.Text>
                            </Label>
                            <Label Text="{Binding Used, Converter={StaticResource UsedBoolConverter}}" Grid.Column="1" Grid.Row="1" HorizontalOptions="End" FontSize="16"/>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>

        <Button Grid.Row="3"  Text="Dodaj testowy bilet" Command="{Binding AddNewTicketTestCommand}"/>

        <ActivityIndicator IsVisible="{Binding IsBusy}"
                           IsRunning="{Binding IsBusy}"
                           MaximumHeightRequest="100"
                           Grid.Row="2"
                           Grid.ColumnSpan="2"/>

    </Grid>
</ContentPage>