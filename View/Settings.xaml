<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:ZIMAeTicket.ViewModel"
             x:DataType="viewmodel:SettingsViewModel"
             x:Class="ZIMAeTicket.View.Settings"
             Title="{Binding Title}">
    <Grid RowDefinitions="Auto,*" RowSpacing="20" VerticalOptions="Fill" HorizontalOptions="Center">
        <ActivityIndicator IsVisible="{Binding IsBusy}"
                   IsRunning="{Binding IsBusy}"
                   MaximumHeightRequest="200"
                   Grid.RowSpan="2"/>
        
        <VerticalStackLayout Grid.Row="0" HorizontalOptions="Center">
            <Button Text="Pobierz bilety ze sklepu" Command="{Binding GetTicketsFromShopCommand}" IsVisible="{OnPlatform Android=false, WinUI=true}" Margin="10"/>
            <Button Text="Synchronizuj bazę biletów" Command="{Binding SyncTicketsDatabaseCommand}" IsVisible="{OnPlatform Android=true, WinUI=false}" Margin="10"/>
            <VerticalStackLayout Margin="10, 0, 10, 20" HorizontalOptions="Center">
                <Label Text="Pobierz od:" Style="{StaticResource SubHeadline}" IsVisible="{OnPlatform Android=false, WinUI=true}"/>
                <Label Text="Synchronizuj od:" Style="{StaticResource SubHeadline}" IsVisible="{OnPlatform Android=true, WinUI=false}"/>
                <DatePicker Date="{Binding QueryDate}"/>
            </VerticalStackLayout>
            <Button Text="Dodaj nową grupę biletów" Margin="10" Command="{Binding GoToNewTicketGroupCommand}"/>
            <Button Text="Pomoc" Margin="10"/>
        </VerticalStackLayout>
        <VerticalStackLayout Grid.Row="1" VerticalOptions="End">
            <Button Text="Resetowanie aplikacji" Grid.Row="2" Margin="10, 10, 10, 50" Command="{Binding ResetApplicationCommand}" BackgroundColor="{StaticResource Gray200}" TextColor="{StaticResource Gray600}"/>
        </VerticalStackLayout>
        
    </Grid>
</ContentPage>