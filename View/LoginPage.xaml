<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ZIMAeTicket.View.LoginPage"
             Title="ZIMAeTicket"
             Shell.FlyoutBehavior="Disabled">
    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <Image
            Source="logo.png"
            HeightRequest="100"
            Aspect="AspectFit"
            SemanticProperties.Description="Logo ZIMAeTicket" Margin="0, 0, 0, 40" />
        <Label Text="PIN:" Style="{StaticResource Headline}" />
        <Entry x:Name="PinEntry" Keyboard="Numeric" IsPassword="True" MaxLength="16" Margin="0, 0, 0, 20" />
        <Label x:Name="ConfirmPinLabel" Text="PotwierdÅº PIN:" Style="{StaticResource Headline}"  IsVisible="False" />
        <Entry x:Name="ConfirmPinEntry" Keyboard="Numeric" IsPassword="True" MaxLength="16" Margin="0, 0, 0, 20" IsVisible="False" />
        <Button x:Name="LoginButton" Text="Odblokuj" Clicked="Login" />
        <Button x:Name="SetNewPinButton" Text="Ustaw PIN" Clicked="SetNewPin" IsVisible="False" />
    </VerticalStackLayout>
</ContentPage>