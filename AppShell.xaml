<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ZIMAeTicket.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:ZIMAeTicket.View">

    <ShellContent
    ContentTemplate="{DataTemplate view:LoginPage}"
    Route="LoginPage" />

    <TabBar>
        <Tab Title="Home" Icon="logo_zima.png">
            <ShellContent
                ContentTemplate="{DataTemplate view:MainPage}"
                Route="MainPage" />
        </Tab>
        <Tab Title="Skanuj" Icon="qrcode.png" IsVisible="{OnPlatform Android=True, WinUI=false}">
            <ShellContent
                ContentTemplate="{DataTemplate view:ScanQR}"
                Route="ScanQR" />
        </Tab>
        <Tab Title="Lista" Icon="list.png">
            <ShellContent
                ContentTemplate="{DataTemplate view:TicketList}"
                Route="TicketList" />
        </Tab>
        <Tab Title="Mailing" Icon="mail.png" IsVisible="{OnPlatform Android=false, WinUI=true}">
            <ShellContent
                ContentTemplate="{DataTemplate view:Mailing}"
                Route="Mailing" />
        </Tab>
        <Tab Title="Opcje" Icon="settings.png">
            <ShellContent
                ContentTemplate="{DataTemplate view:Settings}"
                Route="Settings" />
        </Tab>
    </TabBar>
</Shell>
