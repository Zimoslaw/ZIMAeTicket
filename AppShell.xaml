<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ZIMAeTicket.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:view="clr-namespace:ZIMAeTicket.View">

    <TabBar>
        <Tab Title="Home" Icon="dotnet_bot.png">
            <ShellContent
                ContentTemplate="{DataTemplate view:MainPage}"
                Route="MainPage" />
        </Tab>
        <Tab Title="Skanuj" IsVisible="{OnPlatform Android=True, WinUI=false}">
            <ShellContent
                ContentTemplate="{DataTemplate view:ScanQR}"
                Route="ScanQR" />
        </Tab>
        <Tab Title="Lista">
            <ShellContent
                ContentTemplate="{DataTemplate view:TicketList}"
                Route="TicketList" />
        </Tab>
        <Tab Title="Mailing" IsVisible="{OnPlatform Android=false, WinUI=true}">
            <ShellContent
                ContentTemplate="{DataTemplate view:Mailing}"
                Route="Mailing" />
        </Tab>
        <Tab Title="Opcje">
            <ShellContent
                ContentTemplate="{DataTemplate view:Settings}"
                Route="Settings" />
        </Tab>

    </TabBar>
    
    
    
    

</Shell>
